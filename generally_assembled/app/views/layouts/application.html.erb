<!DOCTYPE html>
<html>
  <head>
    <title>GenerallyAssembled</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </head>

  <body>
  <!-- change the navigation depending if the user is log in or not -->
  <% if current_user %>
  <div class="row container-fluid grey-background">
    <div class="col-sm-1">
    <a href="/"><img class="img-responsive image" src="https://i.imgur.com/9PfJxoO.png"></a>
    </div>
    <!-- begin hidden -->
    <div class="col-sm-4 hide-show search-bar">
      <div class="input-group">
        <input id="smtext" type="text" class="form-control nav-search" placeholder="Search for repos">
        <span class="input-group-btn">
          <button class="btn btn-info nav-btn" type="button">search</button>
        </span>
      </div>
    </div>
    <!-- end hidden -->
    <div class="col-sm-1 col-sm-offset-6">
      <h5><%= image_tag current_user[:image_url], :width=> "60px", :height=> "60px", :class=> "profile-pic" %>
      <%= link_to "Sign Out", "/signout", :class=> "standard-text"%>
      </h5>
    </div>
  </div>
    <% else %>
    <div class="row container-fluid grey-background">
      <div class="col-sm-1">
        <a href="/"><img class="img-responsive image" src="https://i.imgur.com/9PfJxoO.png"></a>
      </div>
      <!-- begin hidden -->
      <div class="col-sm-4 hide-show">
        <div class="input-group">
          <input id="smtext" type="text" class="form-control" placeholder="Search for repos">
          <span class="input-group-btn">
          
          <%= form_tag("/search", method: "get") do %>
            <%= label_tag(:q, "Search for:") %>
            <%= text_field_tag(:q) %>
            <%= submit_tag("Search") %>
          <% end %>
            <button class="btn btn-default" type="button">search</button>
          </span>
        </div>
      </div>
      <!-- end hidden -->
      <div class="col-sm-1 col-sm-offset-6">
        <h4><%= link_to "Sign in with Github", "/auth/github", :class=> "standard-text"%></h4>
      </div>
    </div>
  <% end %>
  <!-- end of navigation -->

    <%= yield %>

  </body>
</html>
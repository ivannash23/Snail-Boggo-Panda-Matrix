<!-- change the navigation depending if the user is log in or not -->
<% if current_user %>
<div class="row">
	<div class="col-sm-1"><h5>Logo</h5></div>
	<div class="col-sm-2 col-sm-offset-9">
	  <h6><%= link_to "Sign Out", "/signout"%>
	  <%= image_tag current_user[:image_url], :width=> "30px", :height=> "30px" %></h6>
	</div>
</div>
  <% else %>
  <div class="row">
  	<div class="col-sm-1"><h5>Logo</h5></div>
  	<div class="col-sm-2 col-sm-offset-9">
		  <h6><%= link_to "Sign in with Github", "/auth/github" %></h6>
  	</div>
  </div>
<% end %>
<!-- end of navigation -->
